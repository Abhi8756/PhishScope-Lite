{
  "manifest_version": 3,
  "name": "PhishScope V1",
  "version": "1.0",
  "description": "Automatically analyzes emails in Gmail for phishing threats.",
  
  "permissions": [
    "storage",      
    "scripting",    
    "activeTab"     
  ],
  
  "host_permissions": [
    "https://mail.google.com/", 
    "http://127.0.0.1:5001/"    
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["images/*.png"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}